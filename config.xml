<?xml version='1.0' encoding='utf-8'?>
<widget id="com.apiqroo.scannerapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Escaner de brazaletes</name>
    <description>
        Escaner de brazalete.
    </description>
    <author email="velasquez_uriel@hotmail.com" href="http://cordova.io">
        Apiqroo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="android-minSdkVersion" value="14" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/icons/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/icons/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/icons/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/icons/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/icons/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icons/android/drawable-xxxhdpi-icon.png" />
        <splash density="port-ldpi" src="www/res/screens/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="www/res/screens/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="www/res/screens/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="www/res/screens/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="www/res/screens/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="www/res/screens/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-background-service" spec="~1.3.5" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-spinner" spec="~1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="cordova-plugin-sqlite-2" spec="~1.0.4" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-x-toast" spec="~2.6.0" />
</widget>
